extends layout

block content
  h1.navbar #{title}
  p Welcome to #{title}
  div.messageBoard
    each val in messages
      div.messageContainer
        p.name #{val.user}
        p.message #{val.text}
        p.date #{val.added.toLocaleString()}
    form(action='/new', method='POST')
      input(type='text', name='messageUser', placeholder='Name' required id="user-name")
      input(type='text', name='messageText', placeholder='Message' required id="user-message")
      input(type='submit', value='Submit')